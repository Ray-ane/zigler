Cumulative Sales by Year :=
CALCULATE(
    SUM( Sales[SalesAmount] ),             // or your [Total Sales] measure
    FILTER(
        ALL( 'Date'[Date] ),               // ignore any current date filters
        'Date'[Date] <= MAX( 'Date'[Date] )    // up to current rowâ€™s date
        && YEAR( 'Date'[Date] ) = YEAR( MAX( 'Date'[Date] ) ) 
    )
)
